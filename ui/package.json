{
  "name": "squidrun-ui",
  "version": "0.1.11",
  "description": "SquidRun multi-pane AI orchestration UI",
  "homepage": "https://squidrun.com",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint \"**/*.js\"",
    "lint:docs": "node scripts/doc-lint.js",
    "lint:fix": "eslint \"**/*.js\" --fix",
    "rebuild": "npx @electron/rebuild -f -w node-pty,better-sqlite3",
    "build": "echo 'Building SquidRun...' && npm run lint && npm run test",
    "build:dev": "echo 'Development build...'",
    "build:staging": "npm run lint && npm run test && echo 'Staging build complete'",
    "build:prod": "npm run lint && npm run test && echo 'Production build complete'",
    "build:win32": "echo 'Windows build...'",
    "build:darwin": "echo 'macOS build...'",
    "build:linux": "echo 'Linux build...'",
    "package": "electron-builder --publish=never",
    "package:win": "electron-builder --win --publish=never",
    "package:mac": "electron-builder --mac --publish=never",
    "package:linux": "electron-builder --linux --publish=never",
    "package:all": "electron-builder -mwl --publish=never",
    "release": "electron-builder --publish=always",
    "release:draft": "electron-builder --publish=always --draft",
    "clean": "rimraf dist out coverage",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build complete!'",
    "notify:staging": "echo 'Deployed to staging'",
    "notify:production": "echo 'Deployed to production'",
    "daemon:start": "node terminal-daemon.js",
    "daemon:stop": "node -e \"const fs=require('fs');const p=fs.readFileSync('daemon.pid','utf-8').trim();process.kill(parseInt(p),'SIGTERM');fs.unlinkSync('daemon.pid');console.log('Daemon stopped')\"",
    "daemon:status": "node -e \"const fs=require('fs');try{const p=fs.readFileSync('daemon.pid','utf-8').trim();process.kill(parseInt(p),0);console.log('Daemon running (PID '+p+')')}catch(e){console.log('Daemon not running')}\"",
    "doctor": "node scripts/hm-doctor.js"
  },
  "keywords": [
    "electron",
    "claude",
    "ai",
    "orchestration"
  ],
  "author": "SquidRun <noreply@squidrun.com>",
  "license": "MIT",
  "build": {
    "appId": "com.squidrun.app",
    "productName": "SquidRun",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "workspace-template/CLAUDE.md",
      "workspace-template/ROLES.md",
      "workspace-template/PRODUCT-GUIDE.md",
      "workspace-template/user-profile.json",
      "workspace-template/GEMINI.md",
      "workspace-template/CODEX.md",
      "workspace-template/AGENTS.md",
      "workspace-template/.squidrun/**",
      "!dist/**",
      "!coverage/**",
      "!out/**",
      "!coverage-output.txt",
      "!daemon.log",
      "!daemon.pid",
      "!session-state.json",
      "!usage-stats.json",
      "!*.pid",
      "!*.log"
    ],
    "asarUnpack": [
      "terminal-daemon.js",
      "config.js",
      "modules/**",
      "node_modules/better-sqlite3/**",
      "node_modules/node-pty/**",
      "node_modules/fsevents/**"
    ],
    "mac": {
      "icon": "assets/squidrun-logo.png",
      "category": "public.app-category.developer-tools",
      "target": [
        { "target": "dmg", "arch": ["universal"] },
        { "target": "zip", "arch": ["universal"] }
      ],
      "x64ArchFiles": "**/node_modules/node-pty/prebuilds/**/*"
    },
    "win": {
      "icon": "assets/squidrun-favicon.ico",
      "target": ["nsis"]
    },
    "linux": {
      "icon": "assets/squidrun-logo.png",
      "target": ["AppImage", "deb"],
      "maintainer": "SquidRun <noreply@squidrun.com>",
      "category": "Development"
    }
  },
  "devDependencies": {
    "@electron/rebuild": "^3.5.0",
    "electron": "^28.0.0",
    "eslint": "^9.39.2",
    "globals": "^17.1.0",
    "jest": "^30.2.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-search": "^0.16.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^3.6.0",
    "dotenv": "^17.2.3",
    "node-pty": "^1.1.0",
    "ws": "^8.19.0"
  }
}
