{
  "name": "hivemind-ui",
  "version": "0.1.0",
  "description": "Multi-pane Claude Code orchestration UI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint modules/*.js renderer.js main.js",
    "lint:fix": "eslint modules/*.js renderer.js main.js --fix",
    "rebuild": "npx @electron/rebuild -f -w node-pty",
    "build": "echo 'Building Hivemind...' && npm run lint && npm run test",
    "build:dev": "echo 'Development build...'",
    "build:staging": "npm run lint && npm run test && echo 'Staging build complete'",
    "build:prod": "npm run lint && npm run test && echo 'Production build complete'",
    "build:win32": "echo 'Windows build...'",
    "build:darwin": "echo 'macOS build...'",
    "build:linux": "echo 'Linux build...'",
    "package": "electron-builder --publish=never",
    "package:win": "electron-builder --win --publish=never",
    "package:mac": "electron-builder --mac --publish=never",
    "package:linux": "electron-builder --linux --publish=never",
    "package:all": "electron-builder -mwl --publish=never",
    "release": "electron-builder --publish=always",
    "release:draft": "electron-builder --publish=always --draft",
    "clean": "rimraf dist out coverage",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build complete!'",
    "notify:staging": "echo 'Deployed to staging'",
    "notify:production": "echo 'Deployed to production'",
    "daemon:start": "node terminal-daemon.js",
    "daemon:stop": "node -e \"const fs=require('fs');const p=fs.readFileSync('daemon.pid','utf-8').trim();process.kill(parseInt(p),'SIGTERM');fs.unlinkSync('daemon.pid');console.log('Daemon stopped')\"",
    "daemon:status": "node -e \"const fs=require('fs');try{const p=fs.readFileSync('daemon.pid','utf-8').trim();process.kill(parseInt(p),0);console.log('Daemon running (PID '+p+')')}catch(e){console.log('Daemon not running')}\""
  },
  "keywords": [
    "electron",
    "claude",
    "ai",
    "orchestration"
  ],
  "author": "Hivemind",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.5.0",
    "electron": "^28.0.0",
    "eslint": "^9.39.2",
    "globals": "^17.1.0",
    "jest": "^30.2.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-search": "^0.16.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^6.0.0",
    "chokidar": "^3.6.0",
    "dotenv": "^17.2.3",
    "node-pty": "^1.0.0",
    "ws": "^8.19.0"
  }
}
