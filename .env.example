# Hivemind Configuration
# Copy this file to .env and adjust as needed

# ===================
# Application
# ===================
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ===================
# API Server
# ===================
API_HOST=0.0.0.0
API_PORT=8000

# ===================
# Orchestration
# ===================

# Paths
WORKSPACE_PATH=./workspace
ROLES_PATH=./roles

# Worker limits
MAX_WORKERS=3

# Timeouts (seconds)
AGENT_TIMEOUT=300
WORKER_TIMEOUT=600
STUCK_THRESHOLD=900

# Retry behavior
MAX_RETRIES=2
MAX_REVISION_CYCLES=3

# ===================
# Claude Code
# ===================
CLAUDE_COMMAND=claude
CLAUDE_OUTPUT_FORMAT=text

# ===================
# Frontend
# ===================
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===================
# Telegram
# ===================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ===================
# Self-Improvement
# ===================
FRICTION_LOGGING_ENABLED=true
AUTO_APPLY_IMPROVEMENTS=false
