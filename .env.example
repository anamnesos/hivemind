# SquidRun Configuration
# Copy this file to .env and adjust as needed

# ===================
# Application
# ===================
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ===================
# API Server
# ===================
API_HOST=0.0.0.0
API_PORT=8000

# ===================
# Orchestration
# ===================

# Paths
WORKSPACE_PATH=./workspace
ROLES_PATH=./roles

# Worker limits
MAX_WORKERS=3

# Timeouts (seconds)
AGENT_TIMEOUT=300
WORKER_TIMEOUT=600
STUCK_THRESHOLD=900

# Retry behavior
MAX_RETRIES=2
MAX_REVISION_CYCLES=3

# ===================
# Claude Code
# ===================
CLAUDE_COMMAND=claude
CLAUDE_OUTPUT_FORMAT=text

# ===================
# Frontend
# ===================
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===================
# API Keys (UI: API Keys tab)
# ===================
# Anthropic API key (placeholder)
ANTHROPIC_API_KEY=
# OpenAI API key (placeholder)
OPENAI_API_KEY=
# Google API key (placeholder)
GOOGLE_API_KEY=
# Recraft API key (placeholder)
RECRAFT_API_KEY=
# GoDaddy API key (placeholder)
GODADDY_API_KEY=
# GoDaddy API secret (placeholder)
GODADDY_API_SECRET=
# GitHub personal access token (placeholder)
GITHUB_TOKEN=
# Vercel token (placeholder)
VERCEL_TOKEN=
# Twilio account SID (placeholder)
TWILIO_ACCOUNT_SID=
# Twilio auth token (placeholder)
TWILIO_AUTH_TOKEN=
# Twilio sending phone number (placeholder)
TWILIO_PHONE_NUMBER=
# SMS recipient phone number (placeholder)
SMS_RECIPIENT=

# ===================
# Telegram
# ===================
# Telegram bot token (placeholder)
TELEGRAM_BOT_TOKEN=
# Telegram chat ID (placeholder)
TELEGRAM_CHAT_ID=

# ===================
# Reddit (marketing automation)
# ===================
# Create app at https://www.reddit.com/prefs/apps/ (type: script)
# Reddit client ID (placeholder)
REDDIT_CLIENT_ID=
# Reddit client secret (placeholder)
REDDIT_CLIENT_SECRET=
# Reddit account username (placeholder)
REDDIT_USERNAME=
# Reddit account password (placeholder)
REDDIT_PASSWORD=

# ===================
# Twitter/X (marketing automation)
# ===================
# Create app at https://developer.twitter.com/en/portal/projects-and-apps
# Enable "Read and Write" permissions, generate access token + secret
# Twitter API key (placeholder)
TWITTER_API_KEY=
# Twitter API secret (placeholder)
TWITTER_API_SECRET=
# Twitter access token (placeholder)
TWITTER_ACCESS_TOKEN=
# Twitter access token secret (placeholder)
TWITTER_ACCESS_SECRET=

# ===================
# Self-Improvement
# ===================
FRICTION_LOGGING_ENABLED=true
AUTO_APPLY_IMPROVEMENTS=false
